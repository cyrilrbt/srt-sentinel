# OBS Configuration
OBS_WS_HOST=127.0.0.1           # OBS WebSocket host (e.g., localhost or IP)
OBS_WS_PORT=4455                # OBS WebSocket port (default: 4455)
OBS_WS_PASSWORD=your_password   # OBS WebSocket password

# SRT Configuration
SRT_STATS_URL=http://your-srt-server/stats  # URL to the SRT stats page
CONFIGURED_PUBLISHERS=publish/live/feed1    # Comma-separated list of publisher keys to monitor
BITRATE_THRESHOLD=500                       # Minimum bitrate (kbps) for a healthy feed

# Scene Configuration
MAIN_SCENE=Main Scene          # Primary OBS scene for the SRT feed
BACKUP_SCENE=Backup Scene      # Backup OBS scene to switch to if the feed is unhealthy

# Polling Interval
POLL_INTERVAL=10               # Polling interval in seconds
